.about {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.about .logo {
  padding: 30rpx;
  display: flex;
  justify-content: center;
}
.about .top {
  padding: 20rpx;
  margin-bottom: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 14px;
  border: 1rpx solid #aaaaff;
}
.about .top text {
  font-family: '微软雅黑';
  font-style: normal;
  font-weight: normal;
  -webkit-text-decoration: none solid;
          text-decoration: none solid;
  white-space: normal;
  text-overflow: clip;
  word-wrap: normal;
  color: #464555;
  text-shadow: 0px 2px 7px #bcbcbc;
}
.about .text {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 14px;
  border: 1rpx solid #aaaaff;
  margin-bottom: 5rpx;
}
.about .text .content {
  text-align: center;
  font-family: '微软雅黑';
  font-style: normal;
  font-weight: normal;
  -webkit-text-decoration: none solid;
          text-decoration: none solid;
  white-space: normal;
  text-overflow: clip;
  word-wrap: normal;
  color: #464555;
  text-shadow: 0px 2px 7px #bcbcbc;
}
.about .text .content text {
  display: block;
}
.about .text .content .newslist {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.about .text .content .newslist text {
  font-size: 10px;
}
.about .text .content .newslist .newitem {
  margin-top: 20rpx;
}

