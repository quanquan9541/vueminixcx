.listbox {
  height: 50px;
  border: 1px solid #adadad;
  border-radius: 15px;
  box-shadow: 0px 3px 2px 2px rgba(198, 198, 198, 0.3);
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.listbox .text,
.listbox .value {
  height: 60rpx;
  margin: 0 10rpx;
  text-align: center;
  line-height: 50rpx;
}
.listbox .text {
  flex: 3;
}
.listbox .value {
  flex: 2;
}

