{
  "bsonType": "object",
  "required": [
    "name"
  ],
  "permission": {
    "read": true,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "存储文档 ID（文章 ID），系统自动生成"
    },
    "z_id": {
      "bsonType": "object",
      "description": "爷ID，用于多级分类",
      "title": "厂商"

    },
    "parent_id": {
      "bsonType": "object",
      "description": "父ID，用于多级分类",
      "title": "品牌",
      "parentKey": "_id" //指定父子关系为：如果数据库记录A的_id和数据库记录B的parent_id相等，则A是B的父级。
    },
    "name": {
      "bsonType": "string",
      "description": "名称",
      "title": "名称",
      "trim": "both"
    },
    "pic": {
      "bsonType": "array",
      "arrayType": "file",
      "defaultValue": "上传手机大图",
      "title": "大图",
      "fileMediaType": "image",
      "fileExtName": "jpg,png"
    },
    "money": {
      "bsonType": "int",
      // "defaultValue": "请输入价格",
      "title": "价格",
      "minimum ": 1
    },
    "url": {
      "bsonType": "string",
      "title": "链接",
      "description": "请输入购买链接"
    },
    "brith": {
      "bsonType": "timestamp",
      "title": "发售日期",
      "description": "请选择发售日期"
    },
    "status": {
      "bsonType": "bool",
      "description": "启用状态",
      "title": "启用",
      "defaultValue": true
    },
    "type": {
      "bsonType": "int",
      "description": "类型0厂商1品牌2型号",
      "title": "类型"
    },
    "create_date": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      },
      "last_date": {
        "bsonType": "timestamp",
        "description": "创建时间",
        "defaultValue": {
          "$env": "now"
        }
      }
    }
  },
  "version": "0.0.1"
}
